{
  "name": "smart-scheduler-api",
  "version": "1.0.0",
  "description": "Smart Scheduler API with automatic task ordering",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "keywords": ["scheduler", "api", "task-management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
